<?xml version="1.0"?>
<!DOCTYPE database SYSTEM "http://db.apache.org/torque/dtd/database.dtd">
<database name="jukebox">
  <table name="tracks">
    <column name="id"
            type="INTEGER"
            primaryKey="true"
            required="true"
            autoIncrement="true"/>
    <column name="title"
            type="VARCHAR"
            size="100"
            required="false"/>
    <column name="album"
            type="VARCHAR"
            size="100"
            required="false"/>
    <column name="artist"
            type="VARCHAR"
            size="100"
            required="false"/>
    <column name="path"
            type="VARCHAR"
            size="255"
            required="true"/>
    <column name="checksum"
            type="VARCHAR"
            size="50"
            required="true"/>
    <column name="likes"
            type="INTEGER"
            required="true"
            default="0"/>
    <column name="dislikes"
            type="INTEGER"
            required="true"
            default="0"/>
    <column name="skips"
            type="INTEGER"
            required="true"
            default="0"/>
    <column name="plays"
            type="INTEGER"
            required="true"
            default="0"/>
    <column name="lastplayed"
            type="TIMESTAMP"
            required="false"/>
    <column name="explicit"
            type="SMALLINT"
            required="true"
            default="0"/>
    <column name="enabled"
            type="SMALLINT"
            required="true"
            default="1"/>
	<index name="track_checksum">
		<index-column name="checksum" />
	</index>
  </table>
  <table name="queue">
    <column name="id"
            type="INTEGER"
            primaryKey="true"
            required="true"
            autoIncrement="true"/>
    <column name="track_id"
            type="INTEGER"
            required="true"/>
  </table>
</database>
